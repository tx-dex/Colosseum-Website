<nav class="navbar navbar-main navbar-expand-lg">
    <div class="container-fullwidth">
        <a class="navbar-brand" href="/"><img src="{{ base_path ~ directory }}/img/ca-logo-blue.png" alt="Colosseum Academy logo"></a>

        <div class="nav-login order-lg-2">
            {% if is_logged_in %}
                <div class="header-profile-info dropdown">
                    <a class="dropdown-toggle btn btn-link" type="button" id="accountMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <div class="profile-icon">
                            <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"></path>
                            </svg>
                        </div>
                        <div class="user-info d-none d-md-block">
                            <span class="user-name">
                                {% if user_first_name is not empty and user_last_name is not empty %}
                                    {{ user_first_name }} {{ user_last_name }}
                                {% else %}
                                    {{ user_name }}
                                {% endif %}
                            </span>
                        </div>
                        <div class="toggle-icon d-none d-md-block">
                            <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
                                <polyline fill="none" stroke="#000" stroke-width="2" points="18 9 12 15 6 9"></polyline>
                            </svg>
                        </div>
                    </a>

                    <div aria-labelledby="accountMenuButton" class="dropdown-menu dropdown-menu-right">
                        <div class="user-info user-info-mobile d-md-none">
                            <span class="user-name">
                                {% if user_first_name is not empty and user_last_name is not empty %}
                                    {{ user_first_name }} {{ user_last_name }}
                                {% else %}
                                    {{ user_name }}
                                {% endif %}
                            </span>
                        </div>
                        <a class="nav-link" href="/user/{{ user_id }}">My courses</a>
                        <a class="nav-link" href="/user/{{ user_id }}/edit">My account</a>
                        <a class="nav-link" href="/user/logout">Log out</a>
                    </div>
                </div>
            {% else %}
                <a href="/user/login" class="btn btn-primary btn-login">Sign in</a>
            {% endif %}
        </div>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <i class="material-icons menu"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            {% if content %}
                {{ content }}
            {% endif %}
        </div>
    </div>
</nav>