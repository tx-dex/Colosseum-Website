    <nav aria-label="breadcrumb" role="navigation">
        <div class="container-fullwidth">
            <ol class="breadcrumb">
                {% for item in breadcrumb %}

                    {% if item.url %}
                        <li class="breadcrumb-item">
                            <a href="{{ item.url }}">{{ item.text }}</a>
                        </li>
                    {% else %}
                        <li class="breadcrumb-item active" aria-current="page">
                            {{ item.text }}
                        </li>
                    {% endif %}

                {% endfor %}

            </ol>
        </div>
    </nav>
{% endif %}