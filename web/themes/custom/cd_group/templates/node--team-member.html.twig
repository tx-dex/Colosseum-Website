{#
    Team member page
#}

{% set articleCategoryClass = content.field_article_category|render|striptags('<!-- -->')|lower|replace({' ':''})|trim %}

<section class="page-section">
    <div class="container">
        {% if content.field_main_image|render|trim is not empty %}
            <div class="article-main-image">
                <img src="{{ node.field_main_image.entity.field_media_image.entity.uri.value | image_style('team_member_image') }}" alt="{{ node.field_main_image.entity.field_media_image.alt }}">
            </div>
        {% endif %}
        <h1 class="page-title">
            {{ label }}
        </h1>
        {% if content.field_job_title|render|trim is not empty %}
            <div class="article-lead">
                <p class="lead-text">{{ content.field_job_title }}</p>
            </div>
        {% endif %}
        <div class="article-content">
            {{ content.body }}
        </div>
    </div>
</section>