{#
    News article page
#}

{% set articleCategoryClass = content.field_article_category|render|striptags('<!-- -->')|lower|replace({' ':''})|trim %}

<nav aria-label="breadcrumb">
    <div class="container-fullwidth">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('entity.node.canonical', {'node': 10}) }}">Newsroom</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ node.label|truncate(40, true, true) }}</li>
        </ol>
    </div>
</nav>

<section class="page-section">
    <div class="container">
        <span class="category-badge {{ articleCategoryClass }}">
            {{ content.field_article_category|render|striptags('<!-- -->')|trim }}
        </span>
        <h1 class="page-title">
            {{ label }}
        </h1>
        <div class="article-main-image">
            <p class="lead-text">{{ content.field_lead_text }}</p>
        </div>
        <div class="article-lead">
            <p class="lead-text">{{ content.field_lead_text }}</p>
        </div>
        <div class="article-content">
            {{ content.body }}
        </div>
    </div>
</section>