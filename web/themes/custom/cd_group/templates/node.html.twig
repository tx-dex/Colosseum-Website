{#
    The default template for rendering a node
#}

{# Page content #}
<section class="page-section page-section-basic-page">
    <div class="container">
        <h1 class="page-title">
            {{ label }}
        </h1>
        {% if content.field_main_image|render|trim is not empty %}
            <div class="page-image">
                <img src="{{ node.field_main_image.entity.field_media_image.entity.uri.value | image_style('course_image') }}" alt="{{ node.field_main_image.entity.field_media_image.alt }}">
            </div>
        {% endif %}
        {% if content.field_lead_text|render|trim is not empty %}
            <p class="lead-text">
                {{ content.field_lead_text }}
            </p>
        {% endif %}
        {% if content.body is not empty %}
            <div class="article-content">
                {{ content.body }}
            </div>
        {% endif %}
    </div>
    {{ content.field_page_sections }}
</section>
