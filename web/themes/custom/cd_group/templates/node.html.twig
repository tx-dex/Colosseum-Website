{#
    The default template for rendering a node
#}

{# Page content #}

{% set hasHeroImage = content.field_main_image|render|trim is not empty %}

<section class="hero-basic-page {{ hasHeroImage ? 'with-image' : '' }}">
    <div class="container-fullwidth">
        <div class="hero-content">
            <h1 class="basic-page-main-title">
                {% if content.field_page_title|render|trim is not empty %}
                    {{ content.field_page_title }}
                {% else %}
                    {{ label }}
                {% endif %}
            </h1>
        </div>
    </div>

    {% if content.field_main_image|render|trim is not empty %}
        <div class="hero-img">
            <img src="{{ node.field_main_image.entity.field_media_image.entity.uri.value | image_style('basic_page_hero') }}" alt="{{ node.field_main_image.entity.field_media_image.alt }}">
        </div>
    {% endif %}
</section>

<div class="page-sections">
    {% if content.field_lead_text|render|trim is not empty %}
        <section class="main-content-section">
            <div class="main-content-container">
                <div class="bp-section section-basic-content">
                    <div class="container article-content">
                        <p class="lead-text">
                            {{ content.field_lead_text }}
                        </p>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}
    {#
    {% if content.body is not empty %}
        <section class="main-content-section">
            <div class="main-content-container">
                <div class="bp-section section-basic-content">
                    <div class="container article-content">
                        {{ content.body }}
                    </div>
                </div>
            </div>
        </section>
    {% endif %}
    #}

    {{ content.field_page_sections }}
</div>

<div class="modal member-info-modal fade" id="memberInfoModal" tabindex="-1" aria-labelledby="memberInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <i class="material-icons close"></i>
            </button>
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-md-5 person-image"></div>
                    <div class="col-sm-8 col-md-7 person-info"></div>
                </div>
            </div>
        </div>
    </div>
</div>
