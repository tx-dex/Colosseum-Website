{% set articleCategoryClass = content.field_article_category|render|striptags('<!-- -->')|lower|replace({' ':''})|trim %}

<a href="{{ path('entity.node.canonical', {'node': node.id}) }}" class="item">
    <span class="category-badge {{ articleCategoryClass }}">{{ content.field_article_category|render|striptags('<!-- -->')|trim }}</span>
    <h4 class="card-title">
        {{ label }}
    </h4>
    {#<div class="article-lead">
        {{ content.field_lead_text }}
    </div>#}
    <button class="btn btn-link add-fwd-icon">Read more</button>
</a>